<Window x:Class="UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:controls="clr-namespace:WPFBasics.Controls;assembly=WPFBasics"
		xmlns:local="clr-namespace:UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<DockPanel>
		<StackPanel HorizontalAlignment="Left"
					Margin="20">
			<Button Command="{Binding CommandPool[Reset]}"
					Width="150"
					Height="35"
					Content="SayHello" />

			<TextBlock Text="{Binding Status}"
					   Width="150"
					   Height="35" />
		</StackPanel>
		<StackPanel Orientation="Horizontal" VerticalAlignment="Top">
			<!-- Nur noch das UserControl verwenden, kein äußeres Grid mehr -->
			<controls:FluentGrid ItemsSource="{Binding grdExampleData1.Items}"
								 Progress="{Binding grdExampleData1.Progress}"
								 IsLoading="{Binding grdExampleData1.IsLoading}"
								 LoadDataCommand="{Binding CommandPool[LoadExampleData1]}"
								 Width="300"
								 Height="240"
								 Margin="0,20,0,0" />
			<controls:FluentGrid ItemsSource="{Binding grdExampleData2.Items}"
								 Progress="{Binding grdExampleData2.Progress}"
								 IsLoading="{Binding grdExampleData2.IsLoading}"
								 LoadDataCommand="{Binding CommandPool[LoadExampleData2]}"
								 Width="800"
								 Height="240"
								 Margin="20,20,0,0" />
		</StackPanel>
	</DockPanel>
</Window>
