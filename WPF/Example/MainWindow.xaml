<Window x:Class="Example.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:Example"
		xmlns:viewmodel="clr-namespace:Example.MVVM.ViewModel"
		xmlns:controls="clr-namespace:WPFBasics.Controls;assembly=WPFBasics"
		mc:Ignorable="d"
		Title="MainWindow"
		Height="450"
		Width="800"
		WindowStyle="None"
		AllowsTransparency="False"
		ResizeMode="CanResize"
		Background="{StaticResource FluentBackgroundBrush}">
	<DockPanel>
		<controls:AppBar DockPanel.Dock="Top" />
		<StackPanel HorizontalAlignment="Left"
					Margin="20">
			<Button Command="{Binding CommandPool[Reset]}"
					Width="150"
					Height="35"
					Content="SayHello" />

			<TextBlock Text="{Binding Status}"
					   Width="150"
					   Height="35" />
		</StackPanel>
		<StackPanel Orientation="Horizontal" VerticalAlignment="Top">
			<!-- Nur noch das UserControl verwenden, kein äußeres Grid mehr -->
			<controls:FluentGrid ItemsSource="{Binding ProgressManager.Items}"
								 HeaderItems="{Binding ProgressManager.Items}"
								 Progress="{Binding ProgressManager.Progress}"
								 IsLoading="{Binding ProgressManager.IsLoading}"
								 LoadDataCommand="{Binding CommandPool[LoadData]}"
								 Width="300"
								 Height="240"
								 Margin="0,20,0,0" />
			<controls:FluentGrid ItemsSource="{Binding ProgressManager.Items}"
								 HeaderItems="{Binding ProgressManager.Items}"
								 Progress="{Binding ProgressManager.Progress}"
								 IsLoading="{Binding ProgressManager.IsLoading}"
								 LoadDataCommand="{Binding CommandPool[LoadData]}"
								 Width="300"
								 Height="240"
								 Margin="0,20,0,0" />
		</StackPanel>
	</DockPanel>
</Window>
